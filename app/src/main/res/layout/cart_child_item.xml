<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <CheckBox
        android:id="@+id/cart_child_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cart_child_item_simple"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/cart_child_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家一" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/cart_child_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text="￥0.0" />
            <TextView
                android:id="@+id/cart_child_item_bargainPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cart_child_item_price"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="￥0.0" />
            <zjc.com.yuekaomoni.view.customview.SumLayout
                android:id="@+id/cart_childe_item_sumlayout"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>