<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
<include layout="@layout/header_shop_layout"></include>
    </LinearLayout>
    <View
        android:id="@+id/iview"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#000"></View>
    <LinearLayout
        android:id="@+id/thb"
        android:layout_below="@+id/iview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        >
        <Button
            android:id="@+id/b_zong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff"
            android:text="综合"
            />
        <Button
            android:id="@+id/b_xiaolaing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff"
            android:text="销量"
            />
        <Button
            android:id="@+id/b_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff"
            android:text="价格"
            />
        <Button
            android:id="@+id/b_shaixuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#fff"
            android:text="筛选"
            />
    </LinearLayout>
    <View
        android:layout_below="@+id/thb"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#000"
        android:id="@+id/view"
        ></View>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
